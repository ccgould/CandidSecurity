<Page x:Class="CandidPortal.Views.Pages.EmployeesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CandidPortal.Views.Pages"
      xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
      xmlns:models="clr-namespace:CandidPortal.Models"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      xmlns:converters="clr-namespace:CandidPortal.Converters"
      d:DesignHeight="450"
      d:DesignWidth="800"
      ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
      ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
      Foreground="{DynamicResource TextFillColorPrimaryBrush}"
      ScrollViewer.CanContentScroll="False"
      mc:Ignorable="d"
      x:Name="EmployeePage"
      Title="EmployeesPage">

    <Page.Resources>
        <converters:TrainingConverter x:Key="trainingConverter"/>
        <converters:DateOnlyToDateTimeConverter x:Key="dateOnlyConverter"/>
        <BooleanToVisibilityConverter x:Key="BoolToVis" />
    </Page.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!--Employee Selection-->
        
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Label Content="Employee"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Center"/>

            <ComboBox ItemsSource="{Binding ViewModel.Employees}"
                      SelectedItem="{Binding ViewModel.Employee}"
                      x:Name="employeeCmb"
                      DisplayMemberPath="FullName"
                      Grid.Column="1"
                      Margin="10,0">
                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="SelectionChanged">
                        <i:InvokeCommandAction Command="{Binding ViewModel.EmployeeSelectionChangedCommand}" />
                    </i:EventTrigger>
                </i:Interaction.Triggers>
            </ComboBox>
        </Grid>


        <!--Employee Data-->

        <TabControl Grid.Row="1"
                    Margin="0,5,0,5"
                    SelectionChanged="TabControl_SelectionChanged">
            <TabItem Header="Dashboard">
                <Grid>
                    <TextBlock Text="Not Avalible"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"/>
                </Grid>
            </TabItem>
            <TabItem Header="Details">
                <Grid>
                    <TextBlock Text="Not Avalible"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"/>
                </Grid>
            </TabItem>
            <TabItem Header="Reports">
                <Grid>
                    <TextBlock Text="Not Avalible"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"/>
                </Grid>
            </TabItem>
            <TabItem Header="Records">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <ui:Button Content="Add New Record" 
                               HorizontalAlignment="Right"  
                               Margin="10" 
                               Appearance="Info"
                               Command="{Binding ViewModel.AddNewRecordCommand}"
                               />

                    <ui:ListView Grid.Row="1" ItemsSource="{Binding ViewModel.TrainingRecords}">
                        <ui:ListView.ItemTemplate>
                            <DataTemplate DataType="{x:Type models:TrainingRecord}">
                                <ui:CardExpander ContentPadding="0">
                                    <ui:CardExpander.Icon>
                                        <ui:SymbolIcon Filled="True" Symbol="Note24"/>
                                    </ui:CardExpander.Icon>
                                    <ui:CardExpander.Header>
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                            </Grid.RowDefinitions>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>


                                            <ui:SymbolIcon Grid.Column="2"
                                                           Grid.Row="0"
                                                               Symbol="Warning24" 
                                                               Visibility="{Binding IsExpired,Converter={StaticResource BoolToVis}}" 
                                                               Foreground="Firebrick"
                                                               FontWeight="Bold" 
                                                               FontSize="25"
                                                               HorizontalAlignment="Right"
                                                               Grid.RowSpan="2"
                                                           Margin="0,0,10,0"/>

                                            <ui:TextBlock
                                                Grid.Row="0"
                                                Grid.Column="0"
                                                FontTypography="Body"
                                                Text="{Binding TrainingType, Converter={StaticResource trainingConverter}}" />

                                            <Grid Grid.Row="1" Grid.Column="0">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>

                                                <ui:TextBlock
                                                Grid.Column="0"
                                                Foreground="{ui:ThemeResource TextFillColorSecondaryBrush}"
                                                Text="{Binding IssuedDate, StringFormat='Issued Date: {0:MMMM dd, yyyy}'}" />

                                                <ui:TextBlock
                                                Grid.Column="1"
                                                Foreground="{ui:ThemeResource TextFillColorSecondaryBrush}"
                                                Text="{Binding ExpiredDate, StringFormat='Expired Date: {0:MMMM dd, yyyy}'}" />
                                            </Grid>
                                        </Grid>
                                    </ui:CardExpander.Header>

                                    <Grid Margin="10">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <Label Content="Record Type"
                                               HorizontalAlignment="Center" 
                                               VerticalAlignment="Center"/>

                                        <ComboBox Grid.Column="1" 
                                                  Margin="10,0,10,0"
                                                  ItemsSource="{Binding Path=ViewModel.TrainingRecordTypes,Source={x:Reference EmployeePage}}"
                                                  Text="{Binding TrainingType, Converter={StaticResource trainingConverter}}"
                                                  
                                                  DisplayMemberPath="Name">
                                            <i:Interaction.Triggers>
                                                <i:EventTrigger EventName="SelectionChanged">
                                                    <i:InvokeCommandAction Command="{Binding ViewModel.EmployeeSelectionChangedCommand}" />
                                                </i:EventTrigger>
                                            </i:Interaction.Triggers>
                                        </ComboBox>

                                        <Label Content="Issue Date"
                                               Grid.Column="2"
                                               HorizontalAlignment="Center" 
                                               VerticalAlignment="Center"/>

                                        <DatePicker Grid.Column="3"
                                                    Margin="10,0,10,0"
                                                    SelectedDate="{Binding IssuedDate, Converter={StaticResource dateOnlyConverter}}"/>

                                        <ui:Button Content="Save" 
                                                   Appearance="Secondary"
                                                   Grid.Column="4"
                                                   Command="{Binding Path=ViewModel.SaveCommand, Source={x:Reference EmployeePage}}"
                                                   CommandParameter="{Binding .}"/>
                                    </Grid>
                                </ui:CardExpander>
                            </DataTemplate>
                        </ui:ListView.ItemTemplate>
                    </ui:ListView>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Page>
