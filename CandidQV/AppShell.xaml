<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="CandidQV.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:CandidQV"
    xmlns:views="clr-namespace:CandidQV.Views"
    Title="CandidQV">


    <TabBar>
        <Tab Title="Main"
            Icon="cat.png">
            <ShellContent
                Title="Home"
                ContentTemplate="{DataTemplate views:VoucherCreationPage}"
                Route="MainPage" />
        </Tab>
        <Tab Title="Airlines"
            Icon="dog.png">
            <ShellContent
            Title="Airlines"
            ContentTemplate="{DataTemplate views:AirlinesPage}"
            Route="Airlines" />
        </Tab>
        <Tab Title="Employees"
            Icon="dog.png">
            <ShellContent
            Title="Employees"
            ContentTemplate="{DataTemplate views:EmployeesPage}"
            Route="Employees" />
        </Tab>
    </TabBar>
</Shell>
