<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CandidQV.MainPage">

    <FlexLayout Direction="Column">
        <VerticalStackLayout Padding="10" FlexLayout.Basis="600">
            <Grid ColumnDefinitions="*, Auto">
                <ListView x:Name="listView">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <ViewCell>
                                <VerticalStackLayout Padding="5">
                                    <Grid ColumnDefinitions="Auto,*,Auto">
                                        <Label Grid.Column="0" Text="{Binding Number}" FontSize="17" FontAttributes="Bold"/>
                                    </Grid>
                                </VerticalStackLayout>
                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
                <Button Text="Add" Grid.Column="1" WidthRequest="100" Margin="10,0"/>
            </Grid>
        </VerticalStackLayout>
    </FlexLayout>
</ContentPage>
